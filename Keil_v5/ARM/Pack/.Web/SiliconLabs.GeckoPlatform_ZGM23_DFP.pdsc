      </subFamily>

    </family>
  </devices>

  <conditions>
    <!-- Compiler Conditions -->
    <condition id="Compiler GCC">
      <require Tcompiler="GCC"/>
    </condition>
    <condition id="Compiler IAR">
      <require Tcompiler="IAR"/>
    </condition>

    <!-- Device Conditions -->
    <condition id="ZGM23">
      <description>Silicon Labs ZGM23 device series</description>
      <require Dvendor="Silicon Labs:21" Dname="ZGM23*"/>
      <require Cclass="CMSIS" Cgroup="CORE"/>
    </condition>
  </conditions>

  <components>
    <component Cclass="Device" Cgroup="Startup" Cversion="2025.6.2" condition="ZGM23">
      <description>System Startup for Silicon Labs ZGM23 device series</description>
      <files>
        <!-- include folder -->
        <file category="include" name="Device/SiliconLabs/ZGM23/Include/"/>
        <file category="header"  name="Device/SiliconLabs/ZGM23/Include/em_device.h"/>
        <!-- system file -->
        <file category="source"  name="Device/SiliconLabs/ZGM23/Source/system_zgm23.c" attr="config" version="2025.6.2"/>
      </files>
    </component>
  </components>
</package>
