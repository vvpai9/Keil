<?xml version="1.0" encoding="UTF-8"?>
<package schemaVersion="1.7.2" xmlns:xs="http://www.w3.org/2001/XMLSchema-instance" xs:noNamespaceSchemaLocation="PACK.xsd">
  <vendor>SiliconLabs</vendor>
  <url>https://www.silabs.com/documents/public/cmsis-packs/</url>
  <name>GeckoPlatform_MGM27_DFP</name>
  <description>Silicon Labs MGM27 Mighty Gecko Series Device Support.</description>
  <license>License/license.md</license>

  <releases>
    <release version="2025.6.2" date="2025-10-06">
      New device families for SIBG301, SIMG301 and New OPNs for Socs EFR32FG23, EFR32MG26, .
    </release>
    <release version="2025.6.0" date="2025-07-25">
      New device families for EFR32BG29, EFR32MG29 and new modules for BGM26, MGM27. New OPNs for Socs EFR32BG22, EFR32BG24, EFR32FG25.
    </release>
  </releases>

  <keywords>
    <!-- keywords for indexing -->
    <keyword>Silicon Labs</keyword>
    <keyword>Device Support</keyword>
    <keyword>Device Family Package Silicon Labs</keyword>
    <keyword>MGM27</keyword>
    <keyword>MGM27</keyword>
    <keyword>Mighty Gecko</keyword>
    <keyword>Gecko</keyword>
  </keywords>

  <devices>
    <family Dfamily="MGM27 Series" Dvendor="Silicon Labs:21">
      <processor Dcore="Cortex-M33" DcoreVersion="r0p0" Dfpu="NO_FPU" Dmpu="NO_MPU" Dtz="NO_TZ" Ddsp="NO_DSP" Dendian="Little-endian" Dclock="0"/>
      <book name="Documents/cortex_m33_dgug.pdf"      title="Cortex-M33 Generic User Guide"/>
      <description>
- 32-bit ARM Cortex M33 core with up to 76.8 MHz maximum operating frequency&#xD;&#xA;- Scalable Memory and Radio configuration options available in QFN and WLCSP packaging&#xD;&#xA;- Energy-efficient radio core with low active and sleep currents&#xD;&#xA;- Secure Boot with Root of Trust and Secure Loader (RTSL)&#xD;&#xA;- Integrated PA with up to 8 dBm transmit power&#xD;&#xA;- DC-DC supporting buck (1.8-3.8 V) or boost (0.8 - 1.7 V) operation&#xD;&#xA;
      </description>

      <subFamily DsubFamily="MGM270S">
        <!-- *************************  Device 'MGM270SC22SNA'  ***************************** -->
        <device Dname="MGM270SC22SNA">
          <compile header="Device/SiliconLabs/MGM27/Include/em_device.h"  define="MGM270SC22SNA"/>
          <debug      svd="SVD/MGM27/MGM270SC22SNA.svd"/>
          <memory     id="IROM1"                start="0x00000000"  size="0x00000000"  startup="1"   default="1"/>
          <memory     id="IRAM1"                start="0x00000000"  size="0x00000000"  init   ="0"   default="1"/>
          <algorithm  name="Flash/GECKOS2C3.FLM"  start="0x00000000"  size="0x00000000"  RAMstart="0x20000000" RAMsize="0x80000" default="1" style="Keil"/>
          <algorithm  name="Flash/FlashGECKOS2C3.flash"  start="0x00000000"  size="0x00000000"  default="0"  style="IAR"/>
        </device>

        <!-- *************************  Device 'MGM270SC32SNA'  ***************************** -->
        <device Dname="MGM270SC32SNA">
          <compile header="Device/SiliconLabs/MGM27/Include/em_device.h"  define="MGM270SC32SNA"/>
          <debug      svd="SVD/MGM27/MGM270SC32SNA.svd"/>
          <memory     id="IROM1"                start="0x00000000"  size="0x00000000"  startup="1"   default="1"/>
          <memory     id="IRAM1"                start="0x00000000"  size="0x00000000"  init   ="0"   default="1"/>
          <algorithm  name="Flash/GECKOS2C3.FLM"  start="0x00000000"  size="0x00000000"  RAMstart="0x20000000" RAMsize="0x80000" default="1" style="Keil"/>
          <algorithm  name="Flash/FlashGECKOS2C3.flash"  start="0x00000000"  size="0x00000000"  default="0"  style="IAR"/>
        </device>

      </subFamily>

    </family>
  </devices>

  <conditions>
    <!-- Compiler Conditions -->
    <condition id="Compiler GCC">
      <require Tcompiler="GCC"/>
    </condition>
    <condition id="Compiler IAR">
      <require Tcompiler="IAR"/>
    </condition>

    <!-- Device Conditions -->
    <condition id="MGM27">
      <description>Silicon Labs MGM27 device series</description>
      <require Dvendor="Silicon Labs:21" Dname="MGM27*"/>
      <require Cclass="CMSIS" Cgroup="CORE"/>
    </condition>
  </conditions>

  <components>
    <component Cclass="Device" Cgroup="Startup" Cversion="2025.6.2" condition="MGM27">
      <description>System Startup for Silicon Labs MGM27 device series</description>
      <files>
        <!-- include folder -->
        <file category="include" name="Device/SiliconLabs/MGM27/Include/"/>
        <file category="header"  name="Device/SiliconLabs/MGM27/Include/em_device.h"/>
        <!-- system file -->
        <file category="source"  name="Device/SiliconLabs/MGM27/Source/system_mgm27.c" attr="config" version="2025.6.2"/>
      </files>
    </component>
  </components>
</package>
